                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/score_textView_height"
                    android:layout_weight=".9"
                    android:paddingTop="@dimen/score_textView_paddingTop"
                    android:text="@string/score_category_title"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/score_textView_TitleSize"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/score_textView_height"
                    android:layout_weight=".6"
                    android:paddingTop="@dimen/score_textView_paddingTop"
                    android:text="@string/score_recent_title"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/score_textView_TitleSize"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/score_textView_height"
                    android:layout_weight=".6"
                    android:paddingTop="@dimen/score_textView_paddingTop"
                    android:text="@string/score_high_title"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/score_textView_TitleSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- dividing line -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/score_divider_height"
                android:background="@color/dividerGrey" />

