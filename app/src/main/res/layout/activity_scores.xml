                    android:layout_height="@dimen/score_textView_height"
                    android:layout_weight=".9"
                    android:paddingTop="@dimen/score_textView_paddingTop"
                    android:text="@string/home_computer"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/score_textView_textSize" />

